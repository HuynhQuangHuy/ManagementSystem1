@model IEnumerable<ManagementSystem.Models.Course>
@{ ViewBag.Title = "Index"; }

<h2>Course</h2>

@using (Html.BeginForm("AllCourse", "Course", FormMethod.Get))
{
<p>
    <input type="search" class="form-control" placeholder="Enter Course Name or Category Name"
           name="searchCourse" style="width:271px; height:33px; display:inline-block;" />

    <input type="submit" value="Search" class="btn btn-info" />

    <a class="btn btn-info" href="~/Course/Index" role="button">
        View all Courses
    </a>
</p>}

<table class="table table-striped">
    <tr>
        <th>Course Id</th>
        <th>Course Name</th>
        <th>Course Descriptions</th>
        <th>Category Name</th>
    </tr>

    @foreach (var course in Model)
    {
<tr>
    <td>@course.Id</td>
    <td>@course.Name</td>
    <td>@course.Descriptions</td>
    <td>@course.Category.Name</td>
}
</tr>
}
</table>